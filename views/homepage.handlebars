<!-- Default home page -->

<div class="container">
    <div class="row">
            <div class="card-panel center-align">
                <h4 class="blue-text text-darken-2">
                    Use the keyboard to play the notes
                </h4>
                <br>
                <div class="row">
                     <div class="col s2 m2">
                        <form action="#">
                           <p>
                             <input name="type" type="radio" id='sine' value='sine' checked/>
                             <label for="sine">Sine</label>
                           </p>
                           <p>
                             <input name="type" type="radio" id='triangle' value='triangle'/>
                             <label for="triangle">Triangle</label>
                           </p>
                           <p>
                             <input name="type" type="radio" id='saw' value='sawtooth'/>
                             <label for="saw">Saw</label>
                           </p>
                             <p>
                               <input name="type" type="radio" id='square' value='square'/>
                               <label for="square">Square</label>
                           </p>
                       </form>
                    </div>  

                    <div class="col s10 m10">
                        <img class="responsive-img center-align" src="images/piano.png" alt="piano">
                    </div>
                </div>
            </div>
    </div>
</div>

<script src='js/audioEngine.js'></script>
<script src='js/socketManager.js'></script>
<script src='js/app.js'></script>
